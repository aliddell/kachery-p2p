{
    "$id": "/IndirectMessage",
    "type": "object",
    "properties": {
        "body": {
            "type": "object",
            "properties": {
                "indirectMessageId": {"$ref": "/MessageId"},
                "fromNodeId": {"$ref": "/NodeId"},
                "toNodeId": {"$ref": "/NodeId"},
                "channelName": {"$ref": "/ChannelName"},
                "route": {
                    "type": "array",
                    "items": {"$ref": "/NodeId"}
                },
                "messageContent": {
                    "oneOf": [
                        {"$ref": "/NodeToNodeMessage"},
                        {"$ref": "/IndirectMessageConfirmation"}
                    ]
                },
                "timestamp": {"$ref": "/Timestamp"}
            },
            "required": ["indirectMessageId", "fromNodeId", "toNodeId", "channelName", "route", "messageContent", "timestamp"],
            "additionalProperties": false
        },
        "signature": {"$ref": "/Signature"}
    },
    "required": ["body", "signature"],
    "additionalProperties": false
}