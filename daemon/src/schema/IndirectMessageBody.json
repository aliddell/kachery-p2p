                "indirectMessageId": {"$ref": "/MessageId"},
                "sourceNodeId": {"$ref": "/NodeId"},
                "destNodeId": {"$ref": "/NodeId"},
                "route": {"type": "array", "items": {"$ref": "/NodeId"}},
                "messageContent": {"$ref": "/IndirectMessageContent"},
                "timestamp": {"$ref": "/Timestamp"}
