#!/usr/bin/env python

import click
import json
import kachery_p2p as kp

@click.group(help="Kachery peer-to-peer command-line client")
def cli():
    pass

@click.command(help="Show the swarms that this node belongs to.")
def get_swarms():
    swarms = kp.get_swarms()
    for swarm in swarms:
        print(swarm['swarmName'])

@click.command(help="Join a swarm.")
@click.argument('swarm_name')
def join_swarm(swarm_name):
    kp.join_swarm(swarm_name)

@click.command(help="Leave a swarm.")
@click.argument('swarm_name')
def leave_swarm(swarm_name):
    kp.leave_swarm(swarm_name)

@click.command(help="Find a file.")
@click.argument('path')
def find_file(path):
    infos = kp.find_file(path)
    for info in infos:
        print(json.dumps(info, indent=4))

@click.command(help="Display kachery_p2p version and exit.")
def version():
    click.echo(f"This is kachery_p2p version {kp.__version__}.")
    exit()

cli.add_command(get_swarms)
cli.add_command(join_swarm)
cli.add_command(leave_swarm)
cli.add_command(find_file)
cli.add_command(version)

if __name__ == "__main__":
    cli()